@model Modelo.NotaFiscal

@{
    ViewBag.Title = "EditarNota";
}

<h2>Editar Nota</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <hr />
    <div class="form-horizontal">

        <div class="form-group">
            @Html.LabelFor(model => model.Produto.Codigo, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.Produto.Codigo, ViewBag.Produtos as SelectList)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Cliente.Codigo, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.Cliente.Codigo, ViewBag.Clientes as SelectList)

            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(n => n.Quantidade, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(n => n.Quantidade, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Salvar" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
