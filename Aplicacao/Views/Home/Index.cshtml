@model IEnumerable<Modelo.NotaFiscal>

@{
    ViewBag.Title = "Index";
}

<h2>Lista de Notas</h2>

<p>
    @Html.ActionLink("Criar Nova Nota", "CriarNota")
    @Html.ActionLink("Gerar Relatório - Total Vendas ", "GerarRelatorio")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Codigo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ValorTotal)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Data)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Codigo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ValorTotal)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Data)
            </td>
            <td>
                @Html.ActionLink("Editar", "EditarNota", new { Codigo = item.Codigo }) |
                @Html.ActionLink("Detalhes", "DetalharNota", new { Codigo = item.Codigo }) |
                @Html.ActionLink("Deletar", "DeletarNota", new { Codigo = item.Codigo }) |
            </td>
        </tr>
    }

</table>
